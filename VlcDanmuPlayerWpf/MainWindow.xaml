<Window x:Class="VlcDanmuPlayerWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpf="clr-namespace:Meta.Vlc.Wpf;assembly=Meta.Vlc.Wpf"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        Title="MainWindow" Height="356" Width="453" Foreground="Cyan" Background="Black" AllowsTransparency="True" WindowStyle="None" Opacity="0.3">
    <Grid Opacity="0.99">
        <Grid.Resources>
            <x:Array Type="{x:Type system:String}" x:Key="VlcOptions">
                <system:String>-I</system:String>
                <system:String>--dummy-quiet</system:String>
                <system:String>--ignore-config</system:String>
                <system:String>--no-video-title</system:String>
                <system:String>--no-sub-autodetect-file</system:String>
            </x:Array>
        </Grid.Resources>
        <Button Name ="ButtonStart" Content="Button" HorizontalAlignment="Left" Margin="59,290,0,0" Width="75" Click="Button_Click"/>
        <Canvas Name="CanvasDanmu" HorizontalAlignment="Left" Height="290" VerticalAlignment="Top" Width="453" Panel.ZIndex="99" Background="Transparent" Opacity="0.8"/>
        <wpf:VlcPlayer x:Name="Player" VlcOption="{StaticResource VlcOptions}" LibVlcPath="..\..\libvlc" EndBehavior="Nothing" Stretch="Fill" Margin="0,0,0,66" Background="Black"/>
    </Grid>
</Window>
